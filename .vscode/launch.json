    "version": "0.2.0",
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "nodemon",
            "program": "${workspaceFolder}/server/dist/index.js",
            "cwd": "${workspaceFolder}/server",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "type": "pwa-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "server"
            ]
        }
