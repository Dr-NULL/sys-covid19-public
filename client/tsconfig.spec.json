/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "baseUrl": ".",
    "paths": {
      "@comp/*": [ "src/app/comp/*" ],
      "@tool/*": [ "src/app/tool/*" ],
      "@models/*": [ "src/app/models/*" ],
      "@modules/*": [ "src/app/modules/*" ],
      "@services/*": [ "src/app/services/*" ]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
